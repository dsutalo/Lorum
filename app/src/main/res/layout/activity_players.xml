<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Players"
    android:padding="16dp"
    android:orientation="vertical"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="Type player names"
        android:textSize="30sp"


        />
    <EditText
        android:id="@+id/etFirstPlayerName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:hint="First players name"
        android:padding="16dp"
        android:layout_marginTop="20dp"

        />
    <EditText
        android:id="@+id/etSecondPlayerName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:hint="Second players name"
        android:padding="16dp"
        android:layout_marginTop="20dp"


        />
    <EditText
        android:id="@+id/etThirdPlayerName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:hint="Third players name"
        android:padding="16dp"
        android:layout_marginTop="20dp"

        />
    <EditText
        android:id="@+id/etFourthPlayerName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:hint="Fourth players name"
        android:padding="16dp"
        android:layout_marginTop="20dp"

        />
    <Button
        android:id="@+id/btnApply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="Apply"
        android:layout_marginTop="20dp"
        android:onClick="Apply"

        />

</LinearLayout>